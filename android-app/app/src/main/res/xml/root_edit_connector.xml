<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Connector">

        <EditTextPreference
            app:key="name"
            app:title="Name"
            app:isPreferenceVisible="false"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="ip"
            app:title="IP"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="port"
            app:title="PORT"
            app:useSimpleSummaryProvider="true"/>
        <EditTextPreference
            app:key="pat"
            app:title="Personal Access Token"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>
    <PreferenceCategory app:title="Actions">

        <Preference
            app:key="save"
            app:title="Save"
            android:icon="@drawable/ic_save_white"
            app:summary="Saves the connector"
            />
        <Preference
            app:key="remove"
            android:enabled="false"
            app:title="Remove"
            android:icon="@drawable/ic_delete_forever_white"
            app:summary="Removes the connector"
            />

    </PreferenceCategory>

</PreferenceScreen>